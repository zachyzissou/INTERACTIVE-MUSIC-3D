{
  "root": true,
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": ["error", "always"],
    "no-console": ["warn", { "allow": ["warn", "error"] }]
  },
  "ignorePatterns": ["**/*.test.ts", "**/*.test.tsx"],
  "env": {
    "browser": true,
    "es2023": true,
    "node": true
  }
}
