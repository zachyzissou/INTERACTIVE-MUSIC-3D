{
  "name": "interactive-music-3d",
  "version": "2.0.0",
  "description": "Next-generation audio-reactive 3D music playground with AI composition",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "playwright test --project=visual",
    "test:smoke": "playwright test tests/e2e/essential-functionality.spec.ts tests/e2e/home.spec.ts --project=chromium --timeout=30000",
    "test:performance": "playwright test tests/e2e/enhanced-features.spec.ts --project=chromium",
    "build:analyze": "ANALYZE=true npm run build",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "prepare": "husky install",
    "jam-server": "node server/jam-server.js"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.17.3",
    "@heroicons/react": "^2.2.0",
    "@magenta/music": "^1.23.1",
    "@next/bundle-analyzer": "^14.2.5",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.5",
    "@react-three/drei": "^9.107.0",
    "@react-three/fiber": "^8.16.8",
    "@react-three/postprocessing": "^2.16.2",
    "@react-three/rapier": "^2.1.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.15",
    "@tonejs/midi": "^2.0.28",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.21",
    "ccapture.js": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "detect-gpu": "^5.0.70",
    "gif.js": "^0.2.0",
    "gsap": "^3.12.8",
    "lottie-web": "^5.12.2",
    "lucide-react": "^0.468.0",
    "maath": "^0.10.8",
    "nanoid": "^5.1.5",
    "next": "^14.2.5",
    "next-pwa": "^5.6.0",
    "postcss": "^8.5.6",
    "postprocessing": "^6.37.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-use": "^17.5.1",
    "simplex-noise": "^4.0.1",
    "tailwindcss": "^3.4.5",
    "three": "^0.165.0",
    "tone": "^15.1.22",
    "typescript": "^5.4.5",
    "use-sound": "^4.0.3",
    "web-vitals": "^3.5.0",
    "workbox-webpack-plugin": "^7.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/three": "^0.165.0",
    "@types/web": "^0.0.164",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@webgpu/types": "^0.1.40",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.11",
    "markdownlint-cli": "^0.45.0",
    "null-loader": "^4.0.1",
    "playwright": "^1.53.2",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "raw-loader": "^4.0.2",
    "ts-node": "^10.9.2",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      "chrome >= 113",
      "firefox >= 121",
      "safari >= 18",
      "edge >= 113"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "music",
    "3d",
    "interactive",
    "ai",
    "webgpu",
    "threejs",
    "audio",
    "reactive",
    "generative"
  ],
  "author": "Interactive Music 3D Team",
  "license": "MIT"
}
