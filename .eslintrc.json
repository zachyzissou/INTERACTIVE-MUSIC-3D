{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react/no-unescaped-entities": "off",
    "react/display-name": "off"
  },
  "ignorePatterns": [
    "**/*.test.ts", 
    "**/*.test.tsx",
    ".next/**",
    "out/**",
    "dist/**",
    "node_modules/**",
    "src/components/A*.tsx",
    "src/components/B*.tsx",
    "src/components/C*.tsx",
    "src/components/D*.tsx",
    "src/components/E*.tsx",
    "src/components/F*.tsx",
    "src/components/I*.tsx",
    "src/components/L*.tsx",
    "src/components/M*.tsx",
    "src/components/P*.tsx",
    "src/components/S*.tsx",
    "src/components/W*.tsx",
    "src/components/AIMusic/**/*",
    "src/components/visual/**/*",
    "src/components/ui/*",
    "src/hooks/*",
    "src/lib/ai-*.ts",
    "src/lib/artist*.ts",
    "src/lib/magenta*.ts",
    "src/lib/sound*.ts",
    "src/lib/webgl*.ts",
    "src/lib/webgpu*.ts",
    "src/shaders/*.ts"
  ]
}